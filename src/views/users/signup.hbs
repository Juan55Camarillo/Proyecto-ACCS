<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        <h1 class="h4">Registro de cuenta</h1>
        
      </div>
      <div class="card-body">
        <img class="rounded-circle mx-auto d-block logo " src="/img/logo.png" alt="Logo">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Correo" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirma Contraseña"
              value="{{confirm_password}}">
          </div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">
            Registrarse
          </button>
          <p>¿Eres un doctor?<a href="https://www.google.com">&nbsp;Contactanos</a></p>
        </form>
      </div>
    </div>
  </div>
</div>